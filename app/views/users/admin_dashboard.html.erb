<div class="container">
  <h1 id="header"><small>Listing All Admins</small></h1>
  <table>
  	<tr>
  		<th>Name</th>
  		<th></th>
  	</tr>
  	<% @users.each do |user| %>
	  	<tr>
	  		<% if user.admin? %>
	  		  <td><%= user.name %></td>
	  		  <td><%= link_to 'Show', user_path(user) %></td>
	   		<% end %>
	  	</tr>
  	<% end %>
  </table>
</div>    